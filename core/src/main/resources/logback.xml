<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- Console Appender -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- File Appender for System Logs -->
  <appender name="SYSTEM_LOG_FILE" class="ch.qos.logback.core.FileAppender">
    <file>logs/system.log</file>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- File Appender for com.quickdeal Logs -->
  <appender name="QUICKDEAL_LOG_FILE" class="ch.qos.logback.core.FileAppender">
    <file>logs/quickdeal.log</file>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Root Logger: Outputs all logs to console and system log file -->
  <root level="INFO">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="SYSTEM_LOG_FILE" />
  </root>

  <!-- Logger for com.quickdeal package: Logs at DEBUG level and outputs to quickdeal log file -->
  <logger name="com.quickdeal" level="DEBUG" additivity="false">
    <appender-ref ref="QUICKDEAL_LOG_FILE" />
  </logger>
</configuration>
